							<a href=" {{(item.0.menuRoute)? item.0.menuRoute : '#' }}" class="parentMenu_a" id={{"link"~key}}>{{item.0.title}}</a>
							{# <br><a style="color:white;" class="childMenu_a" id={{"childMenu"~key}}>|</a>
																			<br><a style="color:white;" class="childMenu_a" id={{"childMenu"~key}} >|</a> #}
						</span><br>
						{% for item2 in item.1  %}
							<span>&nbsp;&nbsp;
								<a href=" {{(item2.menuRoute)? item2.menuRoute : '#' }}" class="childMenu_a" id={{"childMenu"~key}}>
									<span>{{item2.title}}</span>
								</a>
							</span><br class="childMenu_br" id={{"childMenu_br"~key}}>
						{% endfor %}
						<br>
					{% endif %}

				{% endfor %}

			</div>
			<div id="mainCtsImage"class="mainCtsImage"> {% block image %}{% endblock %}</div>
			<div class="mainCtsContent"> {% block contents %}{% endblock %}</div>
