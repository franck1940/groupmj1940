								<div class="footer_a">
									Phone :+2370000000
								</div>
								<div class="footer_a">
									Email :xxx@groupnj1940.com
								</div>
								{% for key, item in allMenus  %}

									{% if item|length == 1 %}
										<div>
											<a href="{{(item.menuRoute)? item.menuRoute : '#'}}" class="footer_a">{{item.title}}</a>
											<br><br>
										</div>
									{% endif %}
									{% if item|length >= 2 %}
										<div>
											<span>
												<a href=" {{(item.0.menuRoute)? item.0.menuRoute : '#' }}" class="footer_a">{{item.0.title}}</a>
												<br><a style="color:white;">|</a>
												<br><a style="color:white;">|</a>
