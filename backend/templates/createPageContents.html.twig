{% extends '@backend/backendmanagement.html.twig' %}
{% block style %}
	<link rel="stylesheet" href="{{asset('public/css/menus.css')}}">
	<link rel="stylesheet" href="{{asset('public/css/backendcontent.css')}}">
{% endblock %}
{% block scripts %}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
	<script language="JavaScript" type="text/javascript" src="{{ asset('public/scripts/actions.js') }}"></script>
	<script language="JavaScript" type="text/javascript" src="{{ asset('public/scripts/UserActions.js') }}"></script>
	<script language="JavaScript" type="text/javascript" src="{{ asset('public/scripts/pgContents.js') }}"></script>

{% endblock %}
{% block backendcontentright %}

	<div id="pagecontainer">
		<div id="contentLft">
			<h2>
				{{ value }}
			</h2>
			<h4 style="{{cssResponse}}">{{response}}</h4>
			<form action="/backendmanagement/pagecontentmanagement/insertPgContent" method="POST" enctype="multipart/form-data">
				<label for="menuContent">Root name:</label><br>
				<select name="allmenu" id="allmenu" onchange="showContentsOfMenu('allmenu','contentOfaMenu','contentDetails')">
					<option value=""></option>
					{% for item in allmenus %}
						<option value="{{item.id}}" {{ (item.id == selected)?'selected':'' }}>{{item.title}}</option>
					{% endfor %}
				</select><br><br>
				<label for="htmlTemplates">Content template:</label><br>
				<select name="htmlTemplates" id="htmlTemplates">
					<option value=""></option>
					{% for item in allTemplates %}
						<option value="{{item.id}}">{{item.templateName}}</option>
					{% endfor %}
				</select><br><br>
				<label for="texttitle">Title:</label><br>
				<input type="text" id="pagetitle" name="title"/><br>
				<label for="picture">Picture:</label><br>
				<input type="file" id="picture" name="picture"/><br>
				<label for="contenteditor">Description:</label><br>
				<textarea name="contenteditor" id="contenteditor" rows="10" cols="70"></textarea><br>
				<input type="submit" value="Create content"/><br><br>
			</form><br><br><br>
    		<a href="/backendmanagement/pagecontentmanagement" style="margin-left:15px; text-decoration: none; font-size:20px"> &#10229; Back to content dashboard</a>

		</div><br>
		<div id="divider"></div>
		<div id="contentRgt">
			<div id="contentTitle">
				Content details of menu
			</div>
			<div id="contentDetails">
				<script>
					showContentsOfMenu('allmenu', 'contentOfaMenu', 'contentDetails');
				</script>
			</div>
		</div>
	</div>

{% endblock %}
