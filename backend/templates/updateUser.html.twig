{% extends '@backend/backendmanagement.html.twig' %}


{% block scripts %}

	<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
	<script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
	<script language="JavaScript" type="text/javascript" src="{{ asset('public/scripts/UserActions.js') }}"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
{% endblock %}
{% block backendcontentright %}

<div id="updatecontainer">
	<h2>
		{{ value }}
	</h2>
	<p id="error_message"/>
	<h4 style="{{cssResponse}}">{{response}}</h4>
	<form action="/backendmanagement/usermanagement/saveNewprofile" method="POST" id="updateuser" enctype="multipart/form-data">

		<label for="userlogin">choose user:</label>
		<select name="selectedUser" id="selectedUser" onchange="getUserById('selectedUser','getSelectedUser')">
			<option value=""></option>
			{% for item in allusers %}
				<option value="{{item.id}}">{{item.firstname}}:{{item.lastname}}</option>
			{% endfor %}
		</select><br><br>
		<!--<button id="checklogin" onclick="getUserToBeUpdate()">
											<i class="fa fa-search"></i>
										</button><br><br>-->
		<table>
			<tr>
				<td>Gender:</td>
				<td>
					<input type="text" maxlength="20" id="gender" name="gender" value="">
				</td>
			</tr>
			<tr>
				<td>Title:</td>
				<td>
					<input type="text" maxlength="20" id="title" name="title" value="">

				</td>
			</tr>
			<tr>
				<td>Firstname:</td>
				<td>
					<input type="text" maxlength="100" id="firstname" name="firstname" value="" pattern="[a-zA-Z ]*">
				</td>
			</tr>
			<tr>
				<td>Lastname:</td>
				<td><input type="text" maxlength="100" id="lastname" name="lastname" for="lastname" value="" pattern="[a-zA-Z ]*"></td>
			</tr>
			<tr>
				<td>Birthday:</td>
				<td><input type="date" maxlength="20" id="birthday" name="birthday" value="" max="" required><br></td>
			</tr>


		</tr>

		<tr>
			<td>E-Mail:</td>
			<td><input type="email" maxlength="100" id="email" name="email" value=""></td>
		</tr>
		<tr>
			<td>Phone number:</td>
			<td><input type="text" maxlength="100" id="phonenumber" name="phonenumber" placeholder="12323400809" pattern="[0-9]*" value=""></td>
		</tr>
		<tr>
			<td>Street name:</td>
			<td><input type="text" maxlength="100" id="streetname" name="streetname" pattern="[a-zA-Z ]*" value=""></td>
		</tr>
		<tr>
			<td>House number:</td>
			<td><input type="text" maxlength="100" id="housenumber" name="housenumber" value="" pattern="[0-9]*"></td>
		</tr>

		<tr>
			<td>Zipcode:</td>
			<td><input type="text" maxlength="5" id="zipcode" name="zipcode" value="" pattern="[0-9]*"></td>
		</tr>
		<tr>
			<td>City:</td>
			<td><input type="text" maxlength="100" id="city" name="city" value=""pattern="[a-zA-Z ]*" ></td>
		</tr>
		<tr>
			<td>Country:</td>
			<td>
				<input type="text" maxlength="100" id="country" name="country" value="" pattern="[a-zA-Z ]*" >
				<input type="hidden" name="action" value="updateAnyProfile"/>
			</td>
		</tr>
		<tr>
			<td>Picture:</td>
			<td>
				<input
				type="file" id="picture" name="picture" value="" accept=".jpg, .jpeg, .png">
			<!--<img width="50px" height="50px" src="../../public/images/person.png">-->

			</td>
		</tr>
		<tr>
			<td><input type="submit" id="insertuser" value="Do update" style="color:rgb(27, 27, 159);"></td>
		</tr>
	</table>
</form>
</div><script>// getDefaultFile('../../public/images/lion1.png');</script>{% endblock %}
